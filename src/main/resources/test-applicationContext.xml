<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="dataSource"
          class="org.springframework.jdbc.datasource.SimpleDriverDataSource">
        <property name="driverClass" value="com.mysql.cj.jdbc.Driver" />
        <property name="url" value="jdbc:mysql://localhost/toby-testdb" />
        <property name="username" value="root" />
        <property name="password" value="" />
    </bean>

    <bean id="userService" class="com.tobybook.ch06.TxProxyFactoryBean">
        <constructor-arg name="target" ref="userServiceImpl" />
        <constructor-arg name="transactionManager" ref="transactionManager" />
        <constructor-arg name="pattern" value="upgradeLevels" />
        <constructor-arg name="serviceInterFace" value="com.tobybook.ch06.UserService" />

    </bean>

    <bean id="userServiceImpl" class="com.tobybook.ch05.UserServiceImpl">
        <constructor-arg ref="userDAO"/>
        <constructor-arg ref="mailSender" />
    </bean>

    <bean id="userDAO" class="com.tobybook.ch01.UserDaoJdbc">
        <constructor-arg ref="dataSource" />
    </bean>

    <bean id="transactionManager" class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
        <property name="dataSource" ref="dataSource" />
    </bean>

    <bean id="mailSender" class="com.tobybook.ch05.DummyMailSender" />

    <bean id="message" class="com.tobybook.ch06.MessageFactoryBean">
        <constructor-arg value="Factory Bean" />
    </bean>
</beans>